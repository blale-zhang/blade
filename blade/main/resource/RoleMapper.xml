<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http//mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.blade.admin.mapper.RoleMapper">

	<select id="selectById" resultType="org.blade.admin.entity.Role">
		select * from sys_role r
		where r.id = #{id}
	</select>

	<insert id="insert" parameterType="org.blade.admin.entity.Role" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO sys_role(
		type,
		name,
		created_date,
		modify_date,
		uuid)
		VALUES
		(
		#{type},
		#{name},
		#{created_date},
		#{modify_date},
		#{uuid});
	</insert>

	<delete id="deleteById" parameterType="long">
		DELETE FROM sys_role  WHERE id = #{id};
	</delete>

</mapper>